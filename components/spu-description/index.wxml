<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="container">
    <view class="left">
        <text class="title">{{spu.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}">
                <l-tag type="reading"
                       fontColor="#157658"
                       bg-color="#DCEBE6"
                       size="super-mini"
                       l-class="l-tag">
                    {{item}}
                </l-tag>
            </block>
        </view>
        <text class="subtitle">{{spu.subtitle}}</text>
        <view class="price-row">
            <l-price wx:if="{{p.mainPrice(spu.price,spu.discount_price).price}}"
                     value="{{p.mainPrice(spu.price,spu.discount_price).price}}"
                     color="#157658"
                     unitSize="24"
                     count-size="30"
                     l-unit-class="l-price-unit"
                     autofix>
            </l-price>
            <l-price wx:if="{{p.slashedPrice(spu.price,spu.discount_price).display}}"
                     deleted
                     color="#999999"
                     size="26"
                     bold="400"
                     l-class="discount-price"
                     value="{{p.slashedPrice(spu.price,spu.discount_price).price}}">
            </l-price>
            <l-tag l-class="discount-tag"
                   type="reading"
                   bgColor="#c93756"
                   wx:if="{{spu.discount_price}}"
                   size="super-mini">折扣
            </l-tag>
        </view>

    </view>
    <view class="right">
       <l-button special openType="share">
           <view class="inner">
               <l-icon name="share" color="#157658" size="24"></l-icon>
               <text>分</text>
               <text>享</text>
           </view>
       </l-button>
    </view>
</view>
