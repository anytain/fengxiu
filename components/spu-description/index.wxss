.container{
    width: 100%;
    box-sizing: border-box;
    background-color: #ffffff;
    padding: 34rpx 30rpx 26rpx 30rpx;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
}
.left{
    flex: 1;
    display:flex;
    flex-direction:column;
}
.tags{
    display:flex;
}
.l-tag{
    margin-right: 6rpx !important;
}
.l-price-unit{
    margin-right: 14rpx !important;
}
.subtitle{
    color: #999999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
}
.price-row{
    display:flex;
    align-items: baseline;
}
.discount-price{
    margin-right: 80rpx;
    margin-left: 20rpx;
}
.discount-tag{
    position: relative !important;
    bottom: 4rpx;
    width: 50rpx;
    border-radius: 20rpx !important;
}
.inner{
    display:flex;
    flex-direction:column;
    align-items: center;
    justify-content: center;
    width: 50rpx;
    height: 120rpx;
    background-color: #DCEBE6;
}
.inner text{
    font-size: 22rpx;
    color: #157658;
}