.sleeve {
    font-family: sleeve !important;
    font-size: 48rpx;
    font-style: normal;
    color: #157658 !important;
}

.inner-container{
    font-size: 24rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
    width: 690rpx;
    height: 200rpx;
    padding:20rpx 30rpx;
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    align-items: center;
}
.l-segment{
    background-color: #ffffff;


}
.item-order text{
   margin-right: 42rpx;
    font-size: 28rpx !important;
}


.title-row{
    width: 600rpx;
    display:flex;
    flex-direction:row;
    justify-content: flex-start;
}
.title-row >text:nth-child(2){
    margin-left: 30rpx;
}

.icon-row{
    width: 600rpx;
    height: 90rpx;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
}

.icon-item{
    height: 100%;
    display:flex;
    color: #666666;
    flex-direction:column;
    justify-content: space-between;
    align-items: center;
}
