<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view data-pid="{{data.id}}" class="container" bind:tap="onItemTap">
<!--
    <image bind:load="onImgLoad" mode="widthFix" class="img" src="{{data.img}}"></image>
-->
    <image bind:load="onImgLoad"
           style="width:{{w}}rpx;height:{{h}}rpx"
           src="{{data.img}}">
    </image>

    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="{{index}}">
                <l-tag l-class="l-tag">{{item}}</l-tag>
            </block>
        </view>
        <view class="price-row">
            <l-price color="#157658"
                     valueSize="28"
                     unitSize="20"
                     autofix
                     value="{{p.mainPrice(data.price,data.discount_price).price}}">

            </l-price>
            <l-price wx:if="{{p.slashedPrice(data.price,data.discount_price).display}}"
                     deleted
                     color="#999999"
                     size="26"
                     l-class="discount-price"
                     value="{{p.slashedPrice(data.price,data.discount_price).price}}">

            </l-price>
        </view>

        <text class="sub-title">{{data.subtitle}}</text>
    </view>
</view>